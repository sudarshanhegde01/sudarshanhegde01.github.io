        <tr><td>Display</td><td>5"–7" touchscreen</td></tr>
        <tr><td>Weight</td><td>2–6 kg</td></tr>
        <tr><td>Power</td><td>100–240V AC</td></tr>
        <tr><td>Temperature Control</td><td>37 ± 0.2°C</td></tr>
      </table>
    </section>

